[color]
        ui = true
[user]
        name = Fendo181
        email = fedno181git@gmail.com
[alias]
        a = add
        cm = commit
        cma = commit --amend
        st = status
        ss = status -s
        sh = show
        fe = fetch
        me = merge
        p  = push
        br = branch
        ch = checkout
        d  = diff
        d1 = diff HEAD~
        d2 = diff HEAD~2
        d3 = diff HEAD~3
        #応用的エイリアス
        ta = log --graph --branches --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(green)- %an, %cr%Creset'
        ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
[core]
    editor = vim -c \"set fenc=utf-8\"
[push]
    default = matching